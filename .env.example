# ==================== 应用模式配置 ====================
# 数据采集功能开关
# - true: 完整功能模式（本地使用，默认）
# - false: 演示模式（禁用数据采集，适合公开 Demo）
ENABLE_DATA_COLLECTION=true

# ==================== Deribit API 凭证配置 ====================
# 环境选择: test=测试环境, prod=实盘环境
DERIBIT_ENV=test

# 测试环境凭证（推荐先在测试环境调试）
DERIBIT_CLIENT_ID_TEST=your_test_client_id
DERIBIT_CLIENT_SECRET_TEST=your_test_client_secret

# 实盘环境凭证（谨慎使用，涉及真实资金）
DERIBIT_CLIENT_ID_PROD=your_prod_client_id
DERIBIT_CLIENT_SECRET_PROD=your_prod_client_secret

# ==================== 监控服务配置 ====================
# 快照间隔（秒）：控制历史数据保存频率
# - 30秒: 高频监控，每小时120个快照，每天2,880个
# - 60秒: 标准配置，每小时60个快照，每天1,440个（推荐）
# - 300秒: 节省存储，每小时12个快照，每天288个
# 注意: 实时推送不受此参数影响，数据变化时立即推送
SNAPSHOT_INTERVAL_SECONDS=60

# ==================== 后端服务配置 ====================
# FastAPI 服务地址和端口
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000

# 数据库路径
DB_PATH=monitor.duckdb

# 无风险利率（用于期权定价）
RISK_FREE_RATE=0.05

# ==================== PostHog 分析配置 ====================
# PostHog API 密钥（从 PostHog 项目设置获取）
POSTHOG_API_KEY=your_posthog_api_key_here

# PostHog 主机地址（默认为 PostHog Cloud，自托管请修改为你的实例地址）
POSTHOG_HOST=https://app.posthog.com

# 是否启用 PostHog 分析（true/false）
# - true: 启用用户行为分析和错误跟踪
# - false: 禁用分析（开发环境推荐）
ENABLE_POSTHOG=false